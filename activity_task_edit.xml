<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- This is a container into which the fragment is placed. It takes up the entire screen.
    We dont use fragment because we dont want Android to auto-instantiate the fragment. We manually
    intantiate it so that we pass parameters to the non-default constructor (the ID of the task to be edited) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"/>

    <!-- compatibility toolbar -->
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_bar_height"
        android:id="@+id/toolbar"/>

</FrameLayout>
